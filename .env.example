# Server Configuration
PORT=8080
WEBSITES_PORT=8080

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Twilio Configuration
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here

# Azure Storage Configuration
# Get connection string with: az storage account show-connection-string -g rg-grace -n mercyhouse --output tsv
AZURE_STORAGE_CONNECTION_STRING=<your storage connection string>
BLOB_CONTAINER=calls

# Optional: Business Hours Configuration (for call routing)
# BUSINESS_HOURS_START=9
# BUSINESS_HOURS_END=17
# BUSINESS_TIMEZONE=America/Chicago
# FORWARD_NUMBER=+16015551234
